# $1 matrikel
# $2 keycode
# $3 permitOpens

if [ ! -d /home/vns_users/vnc_$1/.ssh ];then
	mkdir /home/vns_users/vnc_$1/.ssh 2>/dev/null; 
fi
chmod 700 /home/vns_users/vnc_$1/.ssh; 
echo "command="/bin/false",no-agent-forwarding,no-pty,no-usr-rc,no-X11-forwarding,$3 >> /home/vns_users/vnc_$1/.ssh/authorized_keys;
echo "$2" >> /home/vns_users/vnc_$1/.ssh/authorized_keys;
chmod 644 /home/vns_users/vnc_$1/.ssh/authorized_keys